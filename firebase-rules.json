{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId",
        "profile": {
          ".validate": "newData.hasChild('username') && newData.hasChild('email')"
        },
        "cards": {
          "$cardId": {
            ".validate": "newData.hasChild('name') || newData.hasChild('company')"
          }
        },
        "leads": {
          "$sessionId": {
            ".validate": "!data.exists() || newData.exists() || (auth != null && auth.uid === $userId)",
            "notes": { ".validate": "newData.isString() && newData.val().length < 5000" },
            "tags": {},
            "status": { ".validate": "newData.isString() && newData.val().length < 20" },
            "reminder": {},
            "card": { ".validate": "newData.isString() && newData.val().length < 50" },
            "lastFollowup": {}
          }
        },
        "taps": {
          "$sessionId": {
            ".validate": "newData.hasChild('ts')",
            "lead": {},
            "card": {},
            "status": {},
            "source": {},
            "timeout": {}
          }
        },
        "analytics": {
          "$cardId": {
            "views": {
              "$pushId": {
                ".validate": "newData.hasChild('ts') && newData.hasChild('action')"
              }
            },
            "clicks": {
              "$pushId": {
                ".validate": "newData.hasChild('ts') && newData.hasChild('action')"
              }
            }
          }
        },
        "settings": {
          "$key": {}
        },
        "latest": {
          ".validate": "newData.hasChild('sessionId') && newData.hasChild('ts')"
        },
        "subscription": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": false
        }
      }
    },
    "usernames": {
      ".read": true,
      "$username": {
        ".write": "!data.exists() || (auth != null && data.val() === auth.uid)",
        ".validate": "newData.isString() && newData.val().length > 0"
      }
    },
    "public-tokens": {
      ".read": true,
      "$token": {
        ".write": "auth != null && newData.child('userId').val() === auth.uid",
        ".validate": "newData.hasChild('userId') && newData.hasChild('cardId')"
      }
    },
    "public-nfc": {
      ".read": true,
      "$nfcToken": {
        ".write": "auth != null && newData.val() === auth.uid",
        ".validate": "newData.isString()"
      }
    },
    "waitlist": {
      ".read": "auth != null",
      "$pushId": {
        ".write": "!data.exists()",
        ".validate": "newData.hasChild('email') && newData.hasChild('ts')"
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
